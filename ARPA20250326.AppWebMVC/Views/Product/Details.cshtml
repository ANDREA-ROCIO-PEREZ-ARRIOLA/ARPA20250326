@model ARPA20250326.AppWebMVC.Models.Product

@{
    ViewData["Title"] = "Details";
}

<div>
    <h1 class="display-4 text-center" style="font-family:'Cambria Math'">Detalles de producto</h1>
    <h4 style="font-family:'Cambria Math'" class="text-secondary text-center">Productos</h4>
    <div class="d-flex flex-column justify-content-center align-items-center vh-50">
        <div class="col-md-6 shadow-lg rounded-3 p-4 bg-light">
            <dl class="row text-center">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ProductName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ProductName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Description)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Description)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Price)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Price)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Brand)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Brand.Id)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Warehouse)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Warehouse.Id)
                </dd>
            </dl>
         <hr />
            <div>
                <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">Editar</a>
                <a asp-action="Index" class="btn btn-dark">Volver</a>
            </div>

        </div>
    </div>
</div>




