@model ARPA20250326.AppWebMVC.Models.Brand

@{
    ViewData["Title"] = "Delete";
}

<h1 class="display-4 text-center" style="font-family:'Cambria Math'">Eliminar Marca</h1>


<div>
    <h4 style="font-family:'Cambria Math'" class="text-secondary text-center">Marcas</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2 fw-bold">
            @Html.DisplayNameFor(model => model.BrandName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BrandName)
        </dd>
    </dl>
    <hr />
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-dark">Volver</a>
    </form>
</div>


